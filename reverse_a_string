class Solution
{
    public:
    string reverseWord(string str)
    {
        // Your code goes here
        int n=str.length();
        int left=0;
        int right=n-1;
        
        while(left<=right){
            swap(str[left],str[right]);
            left+=1;
            right-=1;
        }
        return str;
    }
};
